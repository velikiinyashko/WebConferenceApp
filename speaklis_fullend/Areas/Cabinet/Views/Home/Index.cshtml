@using speaklis_fullend.Models
@model Account

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Cabinet/Views/Shared/_Cabinet.cshtml";
}

<div class="main-content">
    <div class="container-horizontal">
        <div>
            <h4>Трансляции</h4>
        </div>
        <div>
            <input class="search" placeholder="&#xF002;" />
        </div>
        <div>
            <a asp-action="createroom" asp-controller="home" asp-area="cabinet" style="border:none; background: none; text-decoration: none;"><h4><i class="fas fa-video"></i> Начать запись</h4></a>
        </div>
        <div style="display:inline-block; color: white;">
            <button class="btn-clean-main"><h4><i class="far fa-bell"></i></h4></button>
            <div class="dropdown">
                <button class="btn-clean-main"><h4><i class="fas fa-bars"></i></h4></button>
                <div class="dropdown-content">
                    <a href="#">Профиль</a>
                    <a href="#">Статистика</a>
                    <a href="#">Кошелек</a>
                    <a href="#">Мой архив (0)</a>
                    <a href="#">Настройки</a>
                    <a asp-action="logout" asp-controller="home" asp-area="cabinet">Выйти</a>
                </div>
            </div>
        </div>
    </div>
    <div>

    </div>
    <div>
        <div style="display: grid; grid-template-columns: 160px 1fr;">
            <div>

            </div>
            <div class="list">
                @foreach (var card in Model.Rooms)
                {
                    <div class="card">
                        <img src="~/images/24de7ef147623bf3e25e99028c30d6ac.jpg" />
                        <h5>@card.Name</h5>

                        <h6>@card.Account.Name @card.Account.SurName</h6>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
